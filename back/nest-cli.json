{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "scraping/scripts/*.js",
        "outDir": "dist",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true
  }
}
