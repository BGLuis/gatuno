# Editor config helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{html,css,scss}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[*.sh]
indent_style = space
indent_size = 2
shell_variant = bash
